# Azure Speech Service Configuration
AZURE_SPEECH_KEY=your_speech_service_key
AZURE_SPEECH_REGION=eastus

# Azure AI Language Service Configuration
AZURE_LANGUAGE_KEY=your_language_service_key
AZURE_LANGUAGE_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/

# Local Storage Configuration
LOCAL_STORAGE_PATH=./data
AUDIO_STORAGE_PATH=./data/audio
VIDEO_STORAGE_PATH=./data/video
DATABASE_PATH=./data/sessions.db

# FastAPI Application Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true

# API Configuration
API_VERSION=v1
API_TITLE=EmoVox API
API_DESCRIPTION=Emotion Detection and Voice Analysis API

# Security Configuration
SECRET_KEY=your-secret-key-here-replace-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=["wav", "mp3", "m4a", "flac"]
ALLOWED_VIDEO_FORMATS=["mp4", "avi", "mov", "mkv"]

# Processing Configuration
MAX_CONCURRENT_PROCESSING=3
PROCESSING_TIMEOUT_SECONDS=300

# Cache Configuration
CACHE_TTL_SECONDS=3600
ENABLE_CACHING=true